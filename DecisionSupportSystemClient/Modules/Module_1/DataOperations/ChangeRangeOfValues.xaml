<Window x:Class="DecisionSupportSystemClient.Modules.Module_1.DataOperations.ChangeRangeOfValues"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DecisionSupportSystemClient.Modules.Module_1.DataOperations"
        mc:Ignorable="d"
        Title="ChangeRangeOfValues" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Center" HorizontalAlignment="Right">Wybierz kolumnę:</Label>
        <ComboBox Name="columnsName" Grid.Column="1" VerticalAlignment="Center">

        </ComboBox>

        <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">Nazwa nowej kolumny:</Label>
        <TextBox Name="newColumnName" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">

        </TextBox>

        <Label Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right">Nowy min:</Label>
        <TextBox Name="newMin" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">

        </TextBox>

        <Label Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right">Nowy max:</Label>
        <TextBox Name="newMax" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1">

        </TextBox>

        <Button Name="Ok" Grid.ColumnSpan="2" Grid.Row="4" Margin="5,15,5,5" Click="Ok_Click">zatwierdź</Button>
    </Grid>
</Window>
